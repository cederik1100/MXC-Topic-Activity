<Window x:Class="MCX_Topics.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MCX_Topics"
        mc:Ignorable="d"
        Title="Window1" Height="454" Width="837" ResizeMode="NoResize">
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                            CornerRadius="10" 
                            BorderBrush="White" 
                            BorderThickness="1">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="Background" Value="#6a00ff"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Width" Value="80"/>
            <Setter Property="Height" Value="30"/>
        </Style>
    </Window.Resources>
    <Grid Background="#ecdfff">
        <Grid.RowDefinitions>
            <RowDefinition Height="2.04"/>
            <RowDefinition Height="97.96"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="600"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>


        <Rectangle Grid.ColumnSpan="3" Fill="#a260ff" Grid.RowSpan="2"/>
        <Image Grid.Row="1" Height="75" Margin="12,10,12,12"  Width="75" Source="/topics.png"/>
        <Rectangle Grid.Column="1" Fill="#dabfff" HorizontalAlignment="Center" Height="285" Grid.Row="2" Stroke="Black" VerticalAlignment="Center" Width="568"/>

        <TextBlock Grid.Column="1" HorizontalAlignment="Left" Grid.Row="2" TextWrapping="Wrap" Text="Code:" VerticalAlignment="Top" FontFamily="Arial Rounded MT Bold" Foreground="#a260ff" Margin="60,50,0,0"/>
        <TextBlock Name="TxtCode" Grid.Column="1" HorizontalAlignment="Left" Grid.Row="2" TextWrapping="Wrap" Text="" VerticalAlignment="Top" FontFamily="Arial Rounded MT Bold" Foreground="#a260ff" Margin="150,50,0,0" Width="100" FontWeight="Bold" FontSize="14"/>

        <TextBlock Grid.Column="1" HorizontalAlignment="Left" Grid.Row="2" TextWrapping="Wrap" Text="Topic:" VerticalAlignment="Top" FontFamily="Arial Rounded MT Bold" Foreground="#a260ff" Margin="60,100,0,0"/>
        <TextBlock Name="TxtTopic" Grid.Column="1" HorizontalAlignment="Left" Grid.Row="2" TextWrapping="Wrap" Text="" VerticalAlignment="Top" FontFamily="Arial Rounded MT Bold" Foreground="#a260ff" Margin="150,100,0,0" Width="100"/>

        <TextBlock Grid.Column="1" HorizontalAlignment="Left" Grid.Row="2" TextWrapping="Wrap" Text="Description:" VerticalAlignment="Top" FontFamily="Arial Rounded MT Bold" Foreground="#a260ff" Margin="60,130,0,0"/>
        <TextBlock Name="TxtDecription" Grid.Column="1" HorizontalAlignment="Left" Grid.Row="2" TextWrapping="Wrap" Text="" VerticalAlignment="Top" FontFamily="Arial Rounded MT Bold" Foreground="#a260ff" Margin="150,130,0,0" Width="370"/>

        <TextBlock Grid.Column="1" HorizontalAlignment="Left" Grid.Row="2" TextWrapping="Wrap" Text="How to use:" VerticalAlignment="Top" FontFamily="Arial Rounded MT Bold" Foreground="#a260ff" Margin="60,160,0,0"/>
        <TextBlock Name="TxtHowToUse" Grid.Column="1" HorizontalAlignment="Left" Grid.Row="2" TextWrapping="Wrap" Text="" VerticalAlignment="Top" FontFamily="Arial Rounded MT Bold" Foreground="#a260ff" Margin="150,160,0,0" Width="370"/>

        <TextBlock Grid.Column="1" HorizontalAlignment="Left" Grid.Row="2" TextWrapping="Wrap" Text="When to use:" VerticalAlignment="Top" FontFamily="Arial Rounded MT Bold" Foreground="#a260ff" Margin="60,190,0,0"/>
        <TextBlock Name="TxtWhenToUse" Grid.Column="1" HorizontalAlignment="Left" Grid.Row="2" TextWrapping="Wrap" Text="" VerticalAlignment="Top" FontFamily="Arial Rounded MT Bold" Foreground="#a260ff" Margin="150,190,0,0" Width="370"/>

        <TextBlock Grid.Column="1" HorizontalAlignment="Left" Grid.Row="2" TextWrapping="Wrap" Text="Others:" VerticalAlignment="Top" FontFamily="Arial Rounded MT Bold" Foreground="#a260ff" Margin="60,220,0,0"/>
        <TextBlock Name="TxtOthers" Grid.Column="1" HorizontalAlignment="Left" Grid.Row="2" TextWrapping="Wrap" Text="" VerticalAlignment="Top" FontFamily="Arial Rounded MT Bold" Foreground="#a260ff" Margin="150,220,0,0" Width="370"/>

        <Button Name="BTClose" Content="Close" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="476,257,0,0" Height="30" Width="88" Click="BTClose_Click" Grid.Column="1" Grid.Row="2"/>

    </Grid>
</Window>
